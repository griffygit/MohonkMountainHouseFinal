            <TextBlock HorizontalAlignment="Left" Margin="10,1780,0,0" TextWrapping="Wrap" Text="© Caleb Herrera 2025" VerticalAlignment="Top" Height="46" Width="1065" FontSize="36" TextAlignment="Center" FontFamily="Microsoft JhengHei Light">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="White" Opacity="0.65"/>
                </TextBlock.Foreground>
            </TextBlock>
            <Button x:Name="lunchButton" Content="Lunch" Margin="90,1468,0,0" VerticalAlignment="Top" Height="120" Width="462" BorderBrush="#FFD3D4B5" FontFamily="Felix Titling" FontSize="45" FontWeight="Bold" CornerRadius="25,25,25,25" BorderThickness="15,15,15,15" Background="#FFFEFAE0" Foreground="#FF545632" FocusVisualPrimaryBrush="#FF545632" FocusVisualSecondaryBrush="White" Click="lunchButton_Click"/>
            <Button x:Name="dinnerButton" Content="Dinner" Margin="90,1593,0,0" VerticalAlignment="Top" Height="120" Width="462" BorderBrush="#FFD3D4B5" FontFamily="Felix Titling" FontSize="45" FontWeight="Bold" CornerRadius="25,25,25,25" BorderThickness="15,15,15,15" Background="#FFFEFAE0" Foreground="#FF545632" FocusVisualPrimaryBrush="#FF545632" FocusVisualSecondaryBrush="White" Click="dinnerButton_Click"/>
            <TextBlock x:Name="timesTextBlock" HorizontalAlignment="Left" Margin="627,1373,0,0" TextWrapping="Wrap" Text="8AM - 9:30AM" VerticalAlignment="Top" Width="333" Height="71" FontSize="48" FontFamily="Felix Titling" Foreground="#FFFEFAE0" FontWeight="Bold" FocusVisualPrimaryBrush="#FF103156"/>
            <TextBlock x:Name="timesTextBlock_Copy" HorizontalAlignment="Left" Margin="663,1500,0,0" TextWrapping="Wrap" Text="12PM - 2PM" VerticalAlignment="Top" Width="278" Height="71" FontSize="48" FontFamily="Felix Titling" Foreground="#FFFEFAE0" FontWeight="Bold" FocusVisualPrimaryBrush="#FF103156"/>
            <TextBlock x:Name="timesTextBlock_Copy1" HorizontalAlignment="Left" Margin="602,1625,0,0" TextWrapping="Wrap" Text="5:30PM - 8:30PM" VerticalAlignment="Top" Width="382" Height="71" FontSize="48" FontFamily="Felix Titling" Foreground="#FFFEFAE0" FontWeight="Bold" FocusVisualPrimaryBrush="#FF103156"/>
            <TextBlock HorizontalAlignment="Left" Margin="34,1274,0,0" TextWrapping="Wrap" Text="in a full implementation, the time would be checked for the user." VerticalAlignment="Top" Height="46" Width="1001" FontSize="30" TextAlignment="Center" FontFamily="Microsoft JhengHei Light">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="#FFFEFAE0" Opacity="0.65"/>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock x:Name="titleBlock" HorizontalAlignment="Left" Margin="153,183,0,0" TextWrapping="Wrap" Text="Main Dining Room" VerticalAlignment="Top" Width="766" Height="71" FontSize="72" FontFamily="Felix Titling" Foreground="#FFFEFAE0" FontWeight="Bold" FocusVisualPrimaryBrush="#FF858485"/>
            <TextBlock x:Name="menuBox" HorizontalAlignment="Left" Margin="117,377,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="814" Height="691" FontSize="68" FontFamily="Felix Titling" Foreground="#FFFEFAE0" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock x:Name="titleBlock_Copy" HorizontalAlignment="Left" Margin="131,267,0,0" TextWrapping="Wrap" Text="Current Offerings" VerticalAlignment="Top" Width="802" Height="71" FontSize="48" FontFamily="Felix Titling" Foreground="#FFE0DFD6" FontWeight="Bold" TextAlignment="Center" FocusVisualPrimaryBrush="#FF858485"/>
        </Grid>
        -->

