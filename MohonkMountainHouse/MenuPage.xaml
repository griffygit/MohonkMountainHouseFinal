    <Viewbox Stretch="Uniform">
        <!-- FIRST ITERATION, NO SUPPORT FOR CHOOSING MEALS OR CALCULATING TOTALS, JUST KEPT FOR SAFETY
        <Grid Width="1080" Height="1920">
            <Image x:Name="backgroundImageBox" Source="Assets\background.png" HorizontalAlignment="Center" Height="2027" VerticalAlignment="Center" Width="1156" FocusVisualPrimaryBrush="{x:Null}" />
            <Rectangle Fill="#66000000"/>
            <Button x:Name="breakfastButton" Content="Breakfast" Margin="90,1343,0,0" VerticalAlignment="Top" Height="121" Width="462" BorderBrush="#FFD3D4B5" FontFamily="Felix Titling" FontSize="45" FontWeight="Bold" CornerRadius="25,25,25,25" BorderThickness="15,15,15,15" Background="#FFFEFAE0" Foreground="#FF545632" FocusVisualPrimaryBrush="#FF545632" FocusVisualSecondaryBrush="White" Click="breakfastButton_Click"/>
